<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <item label="Terminal emulator">
    <action name="Execute"><execute>x-terminal-emulator</execute></action>
  </item>
  <item label="Web browser">
    <action name="Execute"><execute>x-www-browser</execute></action>
  </item>
  <item label="Steam">
	  <action name="Execute"><execute>steam</execute></action>
  </item>
  <item label="Signal">
	  <action name="Execute"><execute>snap run signal-desktop</execute></action>
  </item>
  <item label="Spotify">
	  <action name="Execute"><execute>snap run spotify</execute></action>
  </item>
  <item label="Facebook">
	  <action name="Execute"><execute>snap run caprine</execute></action>
  </item>
  <item label="Editor">
	  <action name="Execute"><execute>pluma</execute></action>
  </item>
  <item label="Settings">
	  <action name="Execute"><execute>mate-control-center</execute></action>
  </item>



  <!-- This requires the presence of the 'menu' package to work -->
  <menu id="/Debian" />
  <separator />
  <menu id="client-list-menu" />
  <separator />
  <item label="ObConf">
    <action name="Execute"><execute>obconf</execute></action>
  </item>
  <item label="Reconfigure">
    <action name="Reconfigure" />
  </item>
  <item label="Restart">
    <action name="Restart" />
  </item>
  <separator />
  <item label="Exit">
    <action name="Exit" />
  </item>
</menu>

</openbox_menu>
